# ============================================
# Polymarket Authentication
# ============================================
# Private key for Polymarket wallet authentication (REQUIRED)
# This is used to create/derive API credentials automatically
PRIVATE_KEY=

# Polymarket CLOB API URL (optional, defaults to production)
POLYMARKET_API_URL=https://clob.polymarket.com

# Chain ID for Polymarket (137 = Polygon Mainnet, 80002 = Amoy Testnet)
CHAIN_ID=137

# ============================================
# Kalshi Authentication
# ============================================
# Kalshi API key (REQUIRED)
KALSHI_API_KEY=16f66e71-0cd4-4b7d-893d-34625f45c84a

# Kalshi API URL (optional, defaults to production)
KALSHI_API_URL=https://trading-api.kalshi.com/trade-api/v2

# Kalshi private key for order signing (OPTIONAL but may be required for trading)
# Use either KALSHI_PRIVATE_KEY_PATH or KALSHI_PRIVATE_KEY_PEM
# KALSHI_PRIVATE_KEY_PATH=/path/to/your/private/key.pem
# OR
KALSHI_PRIVATE_KEY_PEM=-----BEGIN RSA PRIVATE KEY-----

-----END RSA PRIVATE KEY-----

# ============================================
# Trading Configuration
# ============================================
# Minimum trade amount in USDC
MIN_TRADE_AMOUNT=10

# Maximum trade amount in USDC
MAX_TRADE_AMOUNT=1000

# Percentage of available balance to use per trade (0.1 = 10%)
TRADE_PERCENTAGE=0.1

# Available balance for trading (in USDC)
AVAILABLE_BALANCE=1000

# Take profit threshold (default 90)
# Arbitrage opportunity detected when: poly_up + kalshi_down < TAKE_PROFIT
# or: poly_down + kalshi_up < TAKE_PROFIT
TAKE_PROFIT=90

# ============================================
# Bot Configuration
# ============================================
# Scan interval in milliseconds (how often to check for opportunities)
SCAN_INTERVAL=5000

# Redemption check interval in milliseconds (how often to check for resolved markets)
REDEEM_CHECK_INTERVAL=60000

# ============================================
# Optional: Debug Mode
# ============================================
# Set to 'true' to enable debug logging
DEBUG=false
# Set to true for demo environment (demo-api.kalshi.co)
KALSHI_DEMO=false


